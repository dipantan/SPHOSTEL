<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sphostel.activities.RoomChangeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#aa0d7be9"
            app:cardCornerRadius="5dp"
            app:cardElevation="25dp">

            <TextView
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="Name :"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:padding="5dp"
                android:text="Dipantan Chakraborty"
                android:textSize="14sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#aa0d7be9"
            app:cardCornerRadius="5dp"
            app:cardElevation="25dp">

            <TextView
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="Mobile :"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginStart="65dp"
                android:padding="5dp"
                android:text="Dipantan Chakraborty"
                android:textSize="14sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#aa0d7be9"
            app:cardCornerRadius="5dp"
            app:cardElevation="25dp">

            <TextView

                android:layout_width="95dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="Department :"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/department"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginStart="95dp"
                android:padding="5dp"
                android:text="Dipantan Chakraborty"
                android:textSize="14sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#aa0d7be9"
            app:cardCornerRadius="5dp"
            app:cardElevation="25dp">

            <TextView
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="Year :"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/year"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:padding="5dp"
                android:text="Dipantan Chakraborty"
                android:textSize="14sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#aa0d7be9"
            app:cardCornerRadius="5dp"
            app:cardElevation="25dp">

            <TextView
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="Roll :"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/roll"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:padding="5dp"
                android:text="Dipantan Chakraborty"
                android:textSize="14sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#aa0d7be9"
            app:cardCornerRadius="5dp"
            app:cardElevation="25dp">

            <TextView
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="Current room no :"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/current_room_no"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginStart="130dp"
                android:padding="5dp"
                android:text="Dipantan Chakraborty"
                android:textSize="14sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#aa0d7be9"
            app:cardCornerRadius="5dp"
            app:cardElevation="25dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="New room no :"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/new_room_no"
                android:layout_width="270dp"
                android:layout_height="30dp"
                android:layout_marginStart="110dp"
                android:inputType="number"
                android:padding="5dp"
                android:textSize="14sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#aa0d7be9"
            app:cardCornerRadius="5dp"
            app:cardElevation="25dp">

            <TextView
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="Reason :"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/reason"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginStart="65dp"
                android:inputType="text"
                android:padding="5dp"
                android:textSize="14sp" />

        </android.support.v7.widget.CardView>

        <android.support.design.button.MaterialButton
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:text="Submit"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:textStyle="normal"
            app:cornerRadius="5dp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
