<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sphostel.activities.LeaveApplication">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#aa0d7be9"
            app:cardCornerRadius="5dp"
            app:cardElevation="25dp"
            app:cardPreventCornerOverlap="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Name :"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/name_letter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="80dp"
                android:padding="12dp"
                android:textSize="18sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#aa0d7be9"
            app:cardCornerRadius="5dp"
            app:cardElevation="25dp"
            app:cardPreventCornerOverlap="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Department :"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/department_letter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="125dp"
                android:padding="12dp"
                android:textSize="18sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#aa0d7be9"
            app:cardCornerRadius="5dp"
            app:cardElevation="25dp"
            app:cardPreventCornerOverlap="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Year :"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/year_letter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="70dp"
                android:padding="12dp"
                android:textSize="18sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#aa0d7be9"
            app:cardCornerRadius="5dp"
            app:cardElevation="25dp"
            app:cardPreventCornerOverlap="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Roll :"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/roll_letter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="64dp"
                android:padding="12dp"
                android:textSize="18sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#aa0d7be9"
            app:cardCornerRadius="5dp"
            app:cardElevation="25dp"
            app:cardPreventCornerOverlap="true">

            <TextView
                android:id="@+id/room_letter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="80dp"
                android:padding="12dp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Room :"
                android:textSize="18sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#aa0d7be9"
            app:cardCornerRadius="5dp"
            app:cardElevation="25dp"
            app:cardPreventCornerOverlap="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Mobile :"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mobile_letter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="86dp"
                android:padding="12dp"
                android:textSize="18sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#aa0d7be9"
            app:cardCornerRadius="5dp"
            app:cardElevation="25dp"
            app:cardPreventCornerOverlap="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Date from :"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/date_from_letter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="112dp"
                android:inputType="date"
                android:padding="12dp"
                android:textSize="18sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#aa0d7be9"
            app:cardCornerRadius="5dp"
            app:cardElevation="25dp"
            app:cardPreventCornerOverlap="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Date to :"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/date_to_letter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="90dp"
                android:inputType="date"
                android:padding="12dp"
                android:textSize="18sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#aa0d7be9"
            app:cardCornerRadius="5dp"
            app:cardElevation="25dp"
            app:cardPreventCornerOverlap="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Reason :"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/reason_letter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="90dp"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="18sp" />

        </android.support.v7.widget.CardView>

        <android.support.design.button.MaterialButton
            android:id="@+id/submit_letter"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            android:text="Submit"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:textStyle="normal"
            app:cornerRadius="5dp" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
